#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

%:
	dh $@

override_dh_auto_configure:
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib/x86_64-linux-gnu \
		--enable-shared \
		--enable-dmthin \
		--enable-rbd \
		--enable-zvol
